-- Create student table
CREATE TABLE Student (
  student_id INT PRIMARY KEY,
  student_name VARCHAR(100)
);

-- Create course table
CREATE TABLE Course (
  course_id INT PRIMARY KEY,
  course_name VARCHAR(100),
  instructor_name VARCHAR(100)
);

-- Create enrollment (many-to-many) table
CREATE TABLE Enrollment (
  student_id INT,
  course_id  INT,
  PRIMARY KEY(student_id, course_id),
  FOREIGN KEY (student_id) REFERENCES Student(student_id),
  FOREIGN KEY (course_id)  REFERENCES Course(course_id)
);

-- Insert example data
INSERT INTO Student(student_id, student_name) VALUES (1, 'Alice');
INSERT INTO Course(course_id, course_name, instructor_name) VALUES (101, 'DBMS', 'Dr. X');
INSERT INTO Enrollment(student_id, course_id) VALUES (1, 101);

-- Query: find all courses for student Alice
SELECT s.student_name, c.course_name, c.instructor_name
FROM Student s
JOIN Enrollment e ON s.student_id = e.student_id
JOIN Course c ON e.course_id = c.course_id
WHERE s.student_name = 'Alice';
